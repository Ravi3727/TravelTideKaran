<% layout("/layouts/boilerplate") %>

<div class="card" style="width: 20rem; margin: 3rem auto;">
    <div class="card-body">
        <h4 style="text-align: center;">Payment</h4>
        <hr>
        <h6>Destination : <%=currListing.title%></h6>
        <br>

        <div class="payment-partners-div">
            <img src="https://d28wu8o6itv89t.cloudfront.net/images/Visadebitcardpng-1599584312349.png">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/aa/HSBC_logo_%282018%29.svg/1024px-HSBC_logo_%282018%29.svg.png"  style=" width: 3.5rem;">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b7/MasterCard_Logo.svg/1280px-MasterCard_Logo.svg.png">
        </div>
        <br>

        <form class="needs-validation" novalidate>
            <div class="mb-3" >
              <label class="form-label">Name on Card</label>
              <input class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Card Number</label>
                <input class="form-control" required>
            </div>
            <div class="row">
                <div class="mb-3 col-6">
                    <label class="form-label">Expiry Date</label>
                    <input class="form-control" placeholder="MM/YY" required>
                </div>
                <div class="mb-3 col-6">
                    <label class="form-label">CVV</label>
                    <input class="form-control" required>
                </div>
            </div>
            <button class="btn btn-success" style="width: 100%;"><i class="fa-solid fa-lock"></i> Pay â‚¹ <%=currListing.price %></button>
        </form>
    </div>
  </div>
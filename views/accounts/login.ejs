<% layout("/layouts/boilerplate") %>

<h3 style="text-align: center;" class="mt-3">Login on TravelTide</h3>

<div class="row offset-3 col-sm-6 col-8 mt-3 box-review">
    <form class="mt-3 needs-validation" novalidate action="/account/login" method="post">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label" >Username</label>
            <input class="form-control" required name="username">
        </div>
        <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" required name="password">
        </div>
        <button class="btn btn-primary">Login</button>
    </form>
</div>